@{
    ViewData["Title"] = "Перевірка Cookie";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<style>
    .card {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }
    h1, h2, p {
        text-align: center;
        color: white;
    }
    .btn-primary {
        text-white bg-purple-600 hover:bg-purple-700 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center mt-4;
    }
</style>

<div class="min-h-screen bg-gradient-to-b from-purple-900 to-purple-600 flex items-center justify-center px-4 font-sans">
    <div class="container mx-auto mt-8 p-6 bg-opacity-100 rounded-lg shadow-md max-w-md">
        <div class="container p-4 bg-purple-900 bg-opacity-80 rounded-lg shadow-md">
            <div class="container mx-auto p-6 bg-gray-900 bg-opacity-20 rounded-lg shadow-md max-w-md">
                <h1 class="text-3xl font-extrabold mb-6 text-white">Перевірка Cookie</h1>

                @if (ViewBag.CookieValue != null)
                {
                    <h2 class="text-xl mb-4">Значення Cookie: @ViewBag.CookieValue</h2>
                }
                else
                {
                    <p class="text-lg mb-4">Cookie не знайдено або термін дії закінчився.</p>
                }

                <div class="flex justify-center">
                    <a asp-controller="Cookie" asp-action="Index" class="text-white bg-purple-600 hover:bg-purple-700 focus:ring-4 focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Повернутися до форми</a>
                </div>
            </div>
        </div>
    </div>
</div>
