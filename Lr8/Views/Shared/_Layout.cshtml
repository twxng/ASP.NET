<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Lr8</title>
	<script type="importmap"></script>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Lr8.styles.css" asp-append-version="true" />
</head>

<body>
	<header>
		<nav class="navbar navbar-expand-lg custom-glass-navbar mt-3 mb-4">
			<div class="container-fluid justify-content-center">
					<ul class="navbar-nav">
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" style="margin-left:20px ;" href="#" id="productDropdown" role="button"
								data-bs-toggle="dropdown" aria-expanded="false">
								Products
							</a>
							<ul class="dropdown-menu" aria-labelledby="productDropdown">
								<li><a class="dropdown-item" asp-controller="Product" asp-action="List">List</a></li>
								<li><a class="dropdown-item" asp-controller="Product" asp-action="Table">Table</a></li>
							</ul>
						</li>
						<form class="d-flex ms-auto" asp-controller="Product" asp-action="Search" method="get">
							<input class="form-control me-2 custom-glass-input" type="search" placeholder="Product search"
								aria-label="Search" name="query">
							<button class="btn custom-glass-button" type="submit">Search</button>
						</form>
					</ul>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	@* <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Lr8 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
